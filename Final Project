import tkinter as tk

LARGE_FONT = ("Helvetica", 20)
QUESTION_FONT = ("Times New Roman", 20)
CORRECT_FONT = ("Helvetica", 40)
points = 0


class Welcome(tk.Tk):

    def __init__(self, *args, **kwargs):
        tk.Tk.__init__(self, *args, **kwargs)
        container = tk.Frame(self)
        container.pack(side="top", fill="both", expand=True)
        container.grid_rowconfigure(0, weight=1)
        container.grid_columnconfigure(0, weight=1)
        self.frames = {}

        for F in (StartPage, PickQuestion, PageOne, PageTwo, PageThree, PageFour, PageFive, Lose, Correct,
                  Correct2, Correct3, Correct4):
            frame = F(container, self)
            self.frames[F] = frame
            frame.grid(row=0, column=0, sticky="nsew")
        self.show_frame(StartPage)

    def show_frame(self, cont):
        frame = self.frames[cont]
        frame.tkraise()

    def quit(self):
        self.root.destroy


class StartPage(tk.Frame):
    def __init__(self, parent, controller):
        tk.Frame.__init__(self, parent, background="dark turquoise")
        label = tk.Label(self, text="Welcome to Who wants to be a Winner. You will have six\n"
                         "questions to answer. Are you ready to play?", font=LARGE_FONT)
        label.pack(pady=10, padx=10)
        button = tk.Button(self, text="Let's Play", font=QUESTION_FONT, width="26",
                           command=lambda: controller.show_frame(PageOne))
        button.pack()
        button2 = tk.Button(self, text="Quit", font=QUESTION_FONT, width="26",
                            command=quit)
        button2.pack()


class PickQuestion(tk.Frame):
    def __init__(self, parent, controller):
        tk.Frame.__init__(self, parent, background="dark turquoise")
        label = tk.Label(self, text="Choose a question.", font=LARGE_FONT)
        label.pack(pady=10, padx=10)
        button = tk.Button(self, text="Question 1", font=QUESTION_FONT,
                           command=lambda: controller.show_frame(PageOne))
        button.pack()
        button2 = tk.Button(self, text="Question 2", font=QUESTION_FONT,
                            command=lambda: controller.show_frame(PageTwo))
        button3 = tk.Button(self, text="Question 3", font=QUESTION_FONT,
                            command=lambda: controller.show_frame(PageThree))
        button4 = tk.Button(self, text="Question 4", font=QUESTION_FONT,
                            command=lambda: controller.show_frame(PageFour))
        button5 = tk.Button(self, text="Question 5", font=QUESTION_FONT,
                            command=lambda: controller.show_frame(PageFive))
        button2.pack()
        button3.pack()
        button4.pack()
        button5.pack()


class PageOne(tk.Frame):
    def __init__(self, parent, controller):
        tk.Frame.__init__(self, parent, background="navy")
        label = tk.Label(self, text="The football team named Bears is located in what city?", font=LARGE_FONT)
        label.pack(pady=10, padx=10)
        button1 = tk.Button(self, text="A. Chicago", font=QUESTION_FONT, width="26",
                            command=lambda: controller.show_frame(Correct))
        button1.pack(side='top')
        button2 = tk.Button(self, text="B. New York", font=QUESTION_FONT, width="26",
                            command=lambda: controller.show_frame(Lose))
        button3 = tk.Button(self, text="C. McHenry", font=QUESTION_FONT, width="26",
                            command=lambda: controller.show_frame(Lose))
        button2.pack(side='top')
        button3.pack(side='top')


